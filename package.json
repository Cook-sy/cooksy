{
  "name": "cooksy",
  "version": "1.0.0",
  "author": "",
  "license": "ISC",
  "description": "Eat food from real home cooks",
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "concurrently \"npm run server:dev\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "lint": "eslint .",
    "test:client": "cd client && npm test",
    "test:server": "NODE_ENV=test nyc mocha test/*",
    "test:html": "nyc --reporter=html mocha test/*",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "csv-parse": "^1.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.1",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.2.3",
    "pg-hstore": "^2.3.2",
    "redux-promise": "^0.5.3",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "chai-json-schema": "^1.4.0",
    "concurrently": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "faker": "^4.1.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.5.0",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "prettier": "^1.3.1",
    "sequelize-cli": "^2.7.0",
    "sinon": "^2.3.2",
    "sinon-test": "^1.0.2",
    "supertest": "^3.0.0"
  }
}
